doctype html
html
  head
    title= 'jsapi demo'
    meta(name='viewport' content='initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width')
    link(rel='stylesheet' href='http://yui.yahooapis.com/pure/0.6.0/pure-min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type="text/javascript") var _config = !{config};
    script(type='text/javascript', src='//g.alicdn.com/dingding/open-develop/0.8.4/dingtalk.js')
    script(type='text/javascript', src='/javascripts/demo.js')
  body
    h1= title
    .pure-form.pure-form-stacked
      fieldset
        legend 添加新评分
        label 标题
        input(type='text' name='title')
        label 描述
        textarea(name='description')
      input(type='hidden' name='itemsId' value='{1, 2}')
      .bottom-space
        button.pure-button(onclick='choosePeople(\'markers\')') 选择评分人
      .bottom-space
        button.pure-button(onclick='choosePeople(\'berateds\')') 选择被评分人
      input.pure-button.pure-button-primary(type='submit' value='提交' data-url='/api/v1/new-mark')

    .pure-form.pure-form-stacked
      fieldset
        legend.top-space 添加新评分项
        label 评分项描述
        input(type='text' name='description')
        label 总分值
        input(type='text' name='totalValue')
      input.pure-button.pure-button-primary(type='submit' value='提交' data-url='/api/v1/new-mark-item')
