doctype html
html
  head
    title= title
    include includes/head.pug
    script(type='text/javascript', src='/javascripts/mark.js')
  body

    .pure-menu.top-menu
      ul.pure-menu-list.pure-menu-horizontal
        li.pure-menu-item
          a.pure-menu-link(href='#') 项目设定
        li.pure-menu-item.pure-menu-selected
          span.up-arw
          a.pure-menu-link(href='#') 任务管理
        li.pure-menu-item
          a.pure-menu-link(href='#') 数据查询
    .top-menu-space

    .pure-form.pure-form-stacked
      fieldset
        legend 新建任务
        label 任务标题
        input(type='text' name='title')
        .bottom-space
        label 被考核人
        ul
          li 张三
          li 李四
        button.pure-button(onclick='choosePeople(\'markers\')') 选择被考核人
        .bottom-space
        label 考核项目
          i.fa.fa-plus-circle.add-item
        .left-space
          fieldset
            legend 考核项一
            label 分值
            input(type='text' name='title')
            .bottom-space
            label 评分人
            ul
              li 张三
              li 李四
            button.pure-button(onclick='choosePeople(\'markers\')') 选择评分人
      hr
      .bottom-space
      button.pure-button.right-space(onclick='#') 确定提交
      a.pure-button(href='/marks') 返回

    .end
