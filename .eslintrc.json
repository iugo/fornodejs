{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "plugins": ["node"],
  "extends": ["eslint:recommended", "airbnb-base", "google", "plugin:node/recommended"],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "no-param-reassign": ["error", {
      "props": false
    }],
    "comma-dangle": ["error", {
      "arrays": "only-multiline",
      "objects": "only-multiline",
      "functions": "never"
    }],
    "prefer-template": "warn",
    "yoda": ["error", "never"],
    "semi": 2
  }
}
